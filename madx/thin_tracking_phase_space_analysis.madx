kqf1_start_nom =        0.014638481 ;
kqd_start_nom =     -0.01463347009 ;

/*****************************
* Qh = 26.6764
*****************************/

kqf1_end_nom =      0.01465555361 ;
kqd_end_nom =      -0.0146366498 ;

/*****************************
* Qh = 26.64
*****************************/
kqf1_start =      0.01464216062 ;
kqd_start =     -0.01463415566 ;

/******************************
