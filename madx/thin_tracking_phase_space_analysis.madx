SELECT, FLAG= ERROR, PATTERN= "MBA.21590";
EALIGN, DX= 11.0e-3 + misa_knob, DTHETA=0.0;

create, table = tune_var, column = giri, kqf1, kqf2, kqd;


tr$macro(turn): macro = {
          
          giri = turn;
          fill, table = tune_var;
                
         };


/******************************
